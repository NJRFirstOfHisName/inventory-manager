<%- include('layout', {title:title}) %>

<div class="content">
  <h1><%= title %>: <%=platform.company %> <%= platform.name %></h1>

  <% if(platform_games.length != 0){ %>
  <p>
    Delete (or remove) the following games before attempting to delete this
    platform.
  </p>
  <div style="margin-left: 20px; margin-top: 20px">
    <h4>Games</h4>
    <dl>
      <% platform_games.forEach(game => { %>
      <dt>
        <a href="<%= game.url %>"><%= game.title %></a>
      </dt>
      <% }) %>
    </dl>
  </div>
  <% } else { %>
  <p>Do you really want to delete this platform?</p>
  <form action="" method="POST">
    <div class="form-group">
      <input
        type="hidden"
        id="platformid"
        class="form-control"
        name="platformid"
        required
        value="<%= platform._id %>"
      />
    </div>
    <button class="btn btn-primary">Delete</button>
  </form>
  <% } %>
</div>
