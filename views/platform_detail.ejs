<%- include('layout', {title:title}) %>

<div class="content">
  <h1>Platform: <%= platform.name %></h1>
  <div style="margin-left: 20px; margin-top: 20px">
    <h4>Games</h4>
    <dl>
      <% platform_games.forEach(game => { %>
      <dt>
        <a href="<%= game.url %>"><%= game.title %></a>
      </dt>
      <dd><%= game.description %></dd>
      <% }) %> <% if(!platform_games[0]) {%>
      <li>This platform has no games.</li>
      <% } %>
    </dl>
  </div>
</div>

<div>
  <p>
    <a href="<%= platform.url %>/delete">Delete Platform</a>
  </p>
</div>
