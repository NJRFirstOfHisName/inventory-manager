<%- include('layout', {title:title}) %>

<div class="content">
  <h1><%= title %>: <%= genre.name %></h1>

  <% if(genre_games.length != 0){ %>
  <p>Delete the following games before attempting to delete this genre.</p>
  <div style="margin-left: 20px; margin-top: 20px">
    <h4>Games</h4>
    <dl>
      <% genre_games.forEach(game => { %>
      <dt>
        <a href="<%= game.url %>"><%= game.title %></a>
      </dt>
      <dd><%= game.description %></dd>
      <% }) %>
    </dl>
  </div>
  <% } else { %>
  <p>Do you really want to delete this genre?</p>
  <form action="" method="POST">
    <div class="form-group">
      <input
        type="hidden"
        id="genreid"
        class="form-control"
        name="genreid"
        required
        value="<%= genre._id %>"
      />
    </div>
    <button class="btn btn-primary">Delete</button>
  </form>
  <% } %>
</div>
