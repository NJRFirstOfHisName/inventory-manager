<%- include('layout', {title:title}) %>

<div class="content">
  <h1>Genre: <%= genre.name %></h1>
  <p><%= genre.description %></p>
  <div style="margin-left: 20px; margin-top: 20px">
    <h4>Games</h4>
    <dl>
      <% genre_games.forEach(game => { %>
      <dt>
        <a href="<%= game.url %>"><%= game.title %></a>
      </dt>
      <dd><%= game.summary %></dd>
      <% }) %> <% if(!genre_games[0]) {%>
      <li>This genre has no games.</li>
      <% } %>
    </dl>
  </div>
</div>

<div>
  <p>
    <a href="<%= genre.url %>/delete">Delete Genre</a>
  </p>
  <p>
    <a href="<%= genre.url %>/update">Update Genre</a>
  </p>
</div>
