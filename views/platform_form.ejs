<%- include('layout', {title:title}) %>

<div class="content">
  <h1><%= title %></h1>
  <form method="POST" action="">
    <div class="form-group">
      <label for="name">Platform:</label>
      <input
        type="text"
        name="name"
        placeholder="PlayStation 5, Xbox, etc."
        id="name"
        class="form-control"
        value="<%= typeof platform === 'undefined' ? '' : platform.name %>"
        required="true"
      />
    </div>
    <div class="form-group">
      <label for="company">Company:</label>
      <input
        type="text"
        name="company"
        placeholder="Sony, Microsoft, etc."
        id="company"
        class="form-control"
        value="<%= typeof platform === 'undefined' ? '' : platform.company %>"
        required="true"
      />
    </div>
    <button type="submit" class="btn-primary">Submit</button>
  </form>
  <% if(locals.errors) { %>
  <ul>
    <% errors.forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
</div>
